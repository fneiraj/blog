---
import { Icon } from "astro-icon/components";

export interface Props {
  name: string;
  isSelected?: boolean;
  size?: number;
  class?: string;
}

const { name, isSelected, size = 64, ...rest } = Astro.props;
const isOn = isSelected == undefined ? true : isSelected;

const iconPath = `tech/${name.toLowerCase()}.${isOn ? "on" : "off"}`;
---

<Icon name={iconPath} size={size} width={size} {...rest} />
