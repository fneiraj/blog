---
import type { CollectionEntry } from "astro:content";

export interface Props {
  prevPost: CollectionEntry<"blog">;
  nextPost: CollectionEntry<"blog">;
}

const { prevPost, nextPost } = Astro.props;
---

<footer>
  <div
    class="flex flex-col text-sm font-medium sm:flex-row sm:justify-between sm:text-base"
  >
    {
      prevPost && (
        <div class="pt-4 xl:pt-8">
          <a
            href={`/posts/${prevPost.slug}`}
            class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
            aria-label={`Post anterior: ${prevPost.data?.title}`}
          >
            &larr; {prevPost.data?.title}
          </a>
        </div>
      )
    }
    {
      nextPost && (
        <div class="pt-4 xl:pt-8">
          <a
            href={`/posts/${nextPost.slug}`}
            class="text-primary-500 hover:text-primary-600 dark:hover:text-primary-400"
            aria-label={`Post siguiente: ${nextPost.data?.title}`}
          >
            {nextPost.data?.title} &rarr;
          </a>
        </div>
      )
    }
  </div>
</footer>
