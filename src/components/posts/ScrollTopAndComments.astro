<div
  id="scroll-top-and-comments"
  class={`fixed bottom-8 right-8 hidden flex-col gap-3`}
>
  <button
    id="scroll-to-comment"
    aria-label="Scroll To Comment"
    class="rounded-full bg-gray-200 p-2 text-gray-500 transition-all hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-400 dark:hover:bg-gray-600"
  >
    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path
        fill-rule="evenodd"
        d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z"
        clip-rule="evenodd"></path>
    </svg>
  </button>
  <button
    id="scroll-to-top"
    aria-label="Scroll To Top"
    class="rounded-full bg-gray-200 p-2 text-gray-500 transition-all hover:bg-gray-300 dark:bg-gray-700 dark:text-gray-400 dark:hover:bg-gray-600"
  >
    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
      <path
        fill-rule="evenodd"
        d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z"
        clip-rule="evenodd"></path>
    </svg>
  </button>
</div>

<script is:inline>
  document.addEventListener(
    "astro:page-load",
    () => {
      const scrollToCommentBtn = document.getElementById("scroll-to-comment");
      const scrollToTopBtn = document.getElementById("scroll-to-top");

      scrollToCommentBtn?.addEventListener("click", () => {
        const comment = document.getElementById("comment");
        comment?.scrollIntoView({ behavior: "smooth" });
      });

      scrollToTopBtn?.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
      });
    },
    {
      once: false,
    },
  );

  window.addEventListener("scroll", () => {
    const toggleScrollAndComments = (show) => {
      const element = document.getElementById("scroll-top-and-comments");
      if (show) {
        element?.classList.add("md:flex");
        element?.classList.remove("md:hidden");
      } else {
        element?.classList.add("md:hidden");
        element?.classList.remove("md:flex");
      }
    };

    const handleWindowScroll = () => {
      if (window.scrollY > 50) {
        toggleScrollAndComments(true);
      } else {
        toggleScrollAndComments(false);
      }
    };

    handleWindowScroll();
  });
</script>
